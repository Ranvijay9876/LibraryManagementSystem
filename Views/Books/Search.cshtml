@model IEnumerable<LibraryRanvijayProject.Models.Book>

@{
	ViewData["Title"] = "Search";
}

@if(Model.Any())
{

	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
		@foreach (var item in Model)
		{

			<div class="col">
				<div class="card h-100">
					<img src="~/Images/@item.ImageUrl" class="card-img-top" alt="Book Image">
					<div class="card-body">
						<h5 class="card-title">@item.Tittle</h5>
						<p class="card-text">@item.Author</p>
					</div>
					<div class="card-footer">
						<div class="d-flex justify-content-between align-items-center">
							<span class="text-primary fw-bold">@item.publisher</span>
							<a asp-action="AddToCart" class="btn btn-sm btn-outline-primary">
								Barrow Books
							</a>
						</div>

					</div>
				</div>
			</div>

		}
	</div>
}

else
{
<p>No Books Found.</p>
}
